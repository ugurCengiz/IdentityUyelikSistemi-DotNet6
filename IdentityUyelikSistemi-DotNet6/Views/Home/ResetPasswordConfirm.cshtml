@model IdentityUyelikSistemi_DotNet6.ViewModels.PasswordResetViewModel

@{
    ViewData["Title"] = "ResetPasswordConfirm";
}

@if (ViewBag.status == "success")
{
    <div class="alert alert-info"> Şifreniz başarıyla yenilenmiştir. Giriş sayfasına yeni şifreniz ile giriş yapabilirsiniz.</div>
    <a class="btn btn-link" asp-action="Login"asp-controller="Home">Giriş için tıklayınız.</a>
}
else
{


    <h4>Şifre Yenileme</h4>
    <hr/>
    <div class="row">
        <div class="col-md-4 offset-md-4">
            <form asp-action="ResetPasswordConfirm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="PasswordNew" class="control-label"></label>
                    <input asp-for="PasswordNew" class="form-control"/>
                    <span asp-validation-for="PasswordNew" class="text-danger"></span>
                </div>
                <br/>
                <div class="form-group">
                    <input type="submit" value="Yeni şifre oluştur" class="btn btn-primary"/>
                </div>
            </form>
        </div>
    </div>
}


