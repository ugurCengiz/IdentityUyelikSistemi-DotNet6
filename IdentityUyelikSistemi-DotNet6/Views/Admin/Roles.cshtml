@model List<AppRole>
@{
    ViewData["Title"] = "Roles";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<a asp-action="RoleCreate" class="btn btn-info">Role Oluştur</a>
<hr/>
@if (ViewBag.error != null)
{
    <div class="alert alert-danger">@ViewBag.error</div>
}
<table class="table table-bordered table-striped">
    <tr>
        <th>Id</th>
        <th>Rol İsmi</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>
                <form asp-route-id="@item.Id" method="post" asp-action="RoleDelete">
                    <button class="btn btn-success" type="submit">sil</button>
                </form>
            </td>
            <td>
                <a  class="btn btn-info" asp-action="RoleUpdate" asp-route-id="@item.Id">Güncelle</a>
            </td>

        </tr>
    }
</table>

