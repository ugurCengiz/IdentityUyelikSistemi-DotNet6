@model List<AppUser>
@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h2>Üyeler</h2>
<hr/>

<table class="table table-bordered table-striped">
    <tr>
        <td>User Id</td>
        <td>User Name</td>
        <td>Email</td>
       <td>Rol Atama</td>
        
    </tr>

    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="3">Hiç Bir Üye Yoktur.</td>

        </tr>
    }
    else
    {
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.Id</th>
                <th>@item.UserName</th>
                <th>@item.Email</th>
                <td><a class="btn btn-success" asp-action="RoleAssign" asp-route-id="@item.Id">Rol Ata</a></td>
            </tr>
        }
    }
</table>
